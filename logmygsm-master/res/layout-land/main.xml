<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">


  <!-- The block around the left-hand side fields-->
  <LinearLayout
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:layout_width="wrap_content">

    <TextView
      android:layout_height="26sp"
      android:layout_width="match_parent"
      android:id="@+id/cid"
      android:typeface="monospace"
      android:textSize="24sp"
      android:text="#########"
      android:gravity="center">
    </TextView>

    <TextView
      android:layout_height="21sp"
      android:layout_width="match_parent"
      android:id="@+id/twr"
      android:typeface="monospace"
      android:textSize="19sp"
      android:text="########"
      android:gravity="center">
    </TextView>

    <!-- Containing power and accuracy-->
    <LinearLayout
      android:orientation="horizontal"
      android:layout_height="22sp"
      android:layout_width="200dp">

      <TextView
        android:layout_height="wrap_content"
        android:layout_width="110dp"
        android:id="@+id/asu"
        android:typeface="monospace"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:text="###asu"
        android:gravity="right">
      </TextView>

      <TextView
        android:layout_height="wrap_content"
        android:layout_width="80dp"
        android:id="@+id/accuracy"
        android:typeface="monospace"
        android:textSize="20sp"
        android:text="###m"
        android:gravity="right">
      </TextView>

    </LinearLayout>


    <!-- The block around the history and main field list -->
    <LinearLayout
      android:orientation="horizontal"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content">

      <TextView
        android:layout_height="160dp"
        android:layout_width="95dp"
        android:id="@+id/cid_history"
        android:typeface="monospace"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:text="######## ##:##"
        android:gravity="left">
      </TextView>

      <TextView
        android:layout_width="5dp"
        android:layout_height="fill_parent"
        android:id="@+id/top_level_shim">
      </TextView>

      <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="right"
        android:layout_width="100dp"
        android:layout_height="wrap_content">

        <TextView
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:id="@+id/net_lac_mnc"
          android:typeface="monospace"
          android:textSize="14sp"
          android:textColor="@android:color/white"
          android:text="####"
          android:layout_gravity="center">
        </TextView>

        <TextView
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:id="@+id/latitude"
          android:typeface="monospace"
          android:textSize="14sp"
          android:text="-###.####"
          android:layout_gravity="center">
        </TextView>

        <TextView
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:id="@+id/longitude"
          android:typeface="monospace"
          android:textSize="14sp"
          android:text="-###.####"
          android:layout_gravity="center">
        </TextView>

        <TextView
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:id="@+id/sat"
          android:typeface="monospace"
          android:textSize="14sp"
          android:textColor="@android:color/white"
          android:text="##-##-##"
          android:layout_gravity="center">
        </TextView>

        <TextView
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:id="@+id/age"
          android:typeface="monospace"
          android:textSize="14sp"
          android:text="#####s"
          android:layout_gravity="center">
        </TextView>

        <TextView
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:id="@+id/da_offset"
          android:typeface="monospace"
          android:textSize="14sp"
          android:textColor="@android:color/white"
          android:text="D-A #####m"
          android:layout_gravity="center">
        </TextView>

        <TextView
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:id="@+id/count"
          android:typeface="monospace"
          android:textSize="14sp"
          android:textColor="@android:color/white"
          android:text="####"
          android:layout_gravity="center">
        </TextView>

        <TextView
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:id="@+id/odo"
          android:typeface="monospace"
          android:textSize="14sp"
          android:textColor="@android:color/white"
          android:text="##########"
          android:layout_gravity="center">
        </TextView>

        <TextView
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:id="@+id/grid_ref"
          android:typeface="monospace"
          android:textSize="14sp"
          android:textColor="@android:color/white"
          android:text="##########"
          android:layout_gravity="center">
        </TextView>
      </LinearLayout>
    </LinearLayout>


  </LinearLayout>

  <!-- The block around the numeric table at the top -->

  <TextView
    android:layout_width="5dp"
    android:layout_height="fill_parent"
    android:id="@+id/shim_over_map">
  </TextView>

  <uk.org.rc0.logmygsm.Map
    android:id="@+id/map"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    />

</LinearLayout>
<!-- The outermost vertical layout -->


